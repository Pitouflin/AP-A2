{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label': "Nom d\'utilisateur"}) }}
    {{ form_row(form.email, {'label': "adresse e-mail"}) }}
    {{ form_row(form.password, {'label': "Mot de passe"}) }}
    {{ form_row(form.confirm_password, {'label': "Confirmez le mot de passe"}) }}

    <button type="submit" class="btn btn-dark">Inscription</button>

    {{ form_end(form) }}

{% endblock %}